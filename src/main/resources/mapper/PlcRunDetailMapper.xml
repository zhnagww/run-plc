<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runplc.mapper.PlcRunDetailMapper">

    <resultMap id="PlcRunDetailMap" type="com.runplc.entity.PlcRunDetail">
        <id property="id" column="id"/>
        <result property="plcRunId" column="plc_run_id"/>
        <result property="plcAddrId" column="plc_addr_id"/>
        <result property="sortNo" column="sort_no"/>
        <result property="plcValue" column="plc_value"/>
        <result property="timeOutSecond" column="time_out_second"/>
    </resultMap>

    <insert id="insert" parameterType="com.runplc.entity.PlcRunDetail" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO plc_run_detail (plc_run_id, plc_addr_id, sort_no, plc_value, time_out_second)
        VALUES (#{plcRunId}, #{plcAddrId}, #{sortNo}, #{plcValue}, #{timeOutSecond})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM plc_run_detail WHERE id = #{id}
    </delete>

    <delete id="deleteByPlcRunId" parameterType="int">
        DELETE FROM plc_run_detail WHERE plc_run_id = #{plcRunId}
    </delete>

    <update id="update" parameterType="com.runplc.entity.PlcRunDetail">
        UPDATE plc_run_detail
        SET plc_addr_id = #{plcAddrId},
            sort_no = #{sortNo},
            plc_value = #{plcValue},
            time_out_second = #{timeOutSecond}
        WHERE id = #{id}
    </update>

    <update id="updateSortNo">
        UPDATE plc_run_detail
        SET sort_no = #{sortNo}
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="int" resultMap="PlcRunDetailMap">
        SELECT * FROM plc_run_detail WHERE id = #{id}
    </select>

    <select id="selectByPlcRunId" parameterType="int" resultMap="PlcRunDetailMap">
        SELECT * FROM plc_run_detail WHERE plc_run_id = #{plcRunId} ORDER BY sort_no
    </select>

    <select id="selectDistinctPlcRunIdsByPlcAddrIds" resultType="int">
        SELECT DISTINCT plc_run_id
        FROM plc_run_detail
        WHERE plc_addr_id IN
        <foreach collection="plcAddrIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <delete id="deleteByPlcAddrIds">
        DELETE FROM plc_run_detail
        WHERE plc_addr_id IN
        <foreach collection="plcAddrIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="countByPlcRunId" resultType="int">
        SELECT COUNT(1) FROM plc_run_detail WHERE plc_run_id = #{plcRunId}
    </select>

    <select id="selectAll" resultMap="PlcRunDetailMap">
        SELECT * FROM plc_run_detail
    </select>

</mapper>