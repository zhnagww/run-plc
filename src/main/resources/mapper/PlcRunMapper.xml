<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runplc.mapper.PlcRunMapper">

    <resultMap id="PlcRunMap" type="com.runplc.entity.PlcRun">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <insert id="insert" parameterType="com.runplc.entity.PlcRun" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO plc_run (name)
        VALUES (#{name})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM plc_run WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.runplc.entity.PlcRun">
        UPDATE plc_run
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="int" resultMap="PlcRunMap">
        SELECT * FROM plc_run WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="PlcRunMap">
        SELECT * FROM plc_run
    </select>

    <select id="selectByNameForUnique" parameterType="string" resultMap="PlcRunMap">
        SELECT * FROM plc_run WHERE name = #{name} LIMIT 1
    </select>

</mapper>